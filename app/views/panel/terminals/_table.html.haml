.table-responsive
  %table.table.table-striped
    %thead.thead-default
      %tr
        %th #
        %th Título
        %th Playlist
        %th Última modificação
        %th
    %tbody
      - @terminals.each do |terminal|
        %tr
          %th{ scope: 'row' }
            = terminal.id
          %td
            = terminal.title
          %td
            - if terminal.playlist
              = terminal.playlist.title
            - else
              Não possui playlist
          %td
            = I18n.l(terminal.updated_at, format: :long)
          %td.text-center.td-button
            = link_to 'Editar', edit_panel_terminal_path(terminal), class: 'btn btn-raised btn-sm btn-warning no-margin'
