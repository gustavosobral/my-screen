%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle{ 'data-target' => '.navbar-ex-collapse', 'data-toggle' => 'collapse', type: 'button' }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to panel_root_path, class: 'navbar-brand' do
        = image_tag('myscreen-white.svg', alt: 'MyScreen', size: '155x40')
    %ul.nav.top-nav.navbar-right
      - if original_user && original_user.admin?
        %li.switch-back
          = button_to switch_back_path, { class: 'btn btn-raised btn-sm margin-sides-15', method: :patch } do
            %i.material-icons arrow_back
            %span Voltar para #{original_user.name}
      %li
        = link_to panel_profile_path, class: 'blue', 'data-original-title': 'Editar perfil', 'data-placement': 'bottom', 'data-toggle': 'tooltip' do
          %i.material-icons perm_identity
          = current_user.name
      %li.full-screen
        %a{ onclick: 'toggleFullScreen()', href: '', class: 'blue', 'data-original-title': 'Tela cheia', 'data-placement': 'bottom', 'data-toggle': 'tooltip' }
          %i.material-icons settings_overscan
      %li
        = link_to destroy_user_session_path, id: 'exit', method: 'delete', class: 'blue', 'data-original-title': 'Sair', 'data-placement': 'bottom', 'data-toggle': 'tooltip' do
          %i.material-icons power_settings_new
  = render 'layouts/panel/sidebar'
