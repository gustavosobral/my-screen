.row
  - @images.each do |image|
    .col-md-4
      .thumbnail
        %a{ href: '#gallery-modal', 'data-toggle': 'modal', 'data-src': image.file.url,
            'data-title': image.title, 'data-description': image.description }
          = image_tag image.file_url(:small_thumb) if image.file
        .caption.text-center
          %h3
            = image.title
          %p
            = link_to 'Editar', edit_admin_image_path(image)
            |
            = link_to 'Excluir', admin_image_path(image), method: :delete, data: { confirm: 'VocÃª tem certeza?' }

= render 'modal'
